<%- include('./partials/header.ejs') %>
<h2 class="my-3">Edit new Customer</h2>    
<form method="post" action="/cust/save" >
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name" id="name" value="<%= customer.name%>">
         </div>   
         <div class="form-group">
            <label for="age">Age</label>
            <input type="number"  class="form-control"  name="age" id="age"  value="<%= customer.age%>">
         </div> 
         
         <div class="form-group">
            <label for="address">Address</label>
            <input type="text"  class="form-control"  name="address" id="Address"  value="<%= customer.address%>">
         </div>
         <input type="hidden"  name="id" id="id"  value="<%= customer._id%>">

        <input type="submit" class="btn btn-primary" value="Save">
    </form>
<%- include('./partials/footer.ejs') %>
