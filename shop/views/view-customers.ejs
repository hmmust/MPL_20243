<%- include('./partials/header.ejs') %>
<a href="/cust/add" class="btn btn-primary my-3" >Add Customer</a>   
<table class="table table-striped table-hover">
        <thead>
            <th>Name</th>
            <th>Age</th>
            <th>Address</th>
            <th>Actions</th>
        </thead>
    <tbody>
    <% for(c of customers){ %>
        <tr>
            <td><%= c.name %> </td> 
            <td> <%= c.age %> </td>
            <td> <%= c.address %> </td>
            <td>
                <a href="/cust/delete/<%= c._id %>" class="btn btn-danger p-1">Delete</a> 
                <a href="" class="btn btn-success p-1">Edit</a>
            </td>
        </tr>
        <% } %>
    </tbody>
    </table>
