<%- include('./partials/header.ejs') %>
<a href="/cust/add" class="btn btn-primary my-3" >Add Customer</a>   
<table class="table table-striped table-hover">
        <thead>
            <th>Name</th>
            <th>Age</th>
            <th>Address</th>
            <th colspan="2">Actions</th>
        </thead>d
    <tbody>
    <% for(c of customers){ %>
        <tr>
            <td><%= c.name %> </td> 
            <td> <%= c.age %> </td>
            <td> <%= c.address %> </td>
            <td>
                <a href="/cust/delete/<%= c._id %>" class="btn btn-danger p-1">Delete</a> 
            </td>
            <td>
                    <form action="/cust/update" method="post">
                    <input type="hidden" name="id" value="<%= c._id %>">
                    <button type="submit" class="btn btn-success p-1">Edit</button>
                </form>
            </td>
        </tr>
        <% } %>
    </tbody>
    </table>
    <%- include('./partials/footer.ejs') %>
